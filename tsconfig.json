{
  "compilerOptions": {
    "outDir": "./dist/",
    "declaration": true,
    "noImplicitAny": true,
    "module": "es6",
    "lib": ["es6", "dom"],
    "target": "es5",
    "allowJs": true,
    "types": ["node", "jest", "whatwg-fetch"],
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
